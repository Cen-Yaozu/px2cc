{
  "name": "claude-code-builder",
  "version": "1.0.0",
  "description": "一体化Claude Code资源构建工具 - 轻松创建Commands和Subagents",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "node --test dist/**/*.test.js"
  },
  "keywords": [
    "claude",
    "claude-code", 
    "ai",
    "commands",
    "subagents",
    "builder",
    "generator",
    "automation",
    "prompt"
  ],
  "author": {
    "name": "Claude Code Builder Team",
    "email": "contact@example.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/claude-code-builder.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/claude-code-builder/issues"
  },
  "homepage": "https://github.com/your-org/claude-code-builder#readme",
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0"
  },
  "dependencies": {},
  "engines": {
    "node": ">=16.0.0"
  }
}